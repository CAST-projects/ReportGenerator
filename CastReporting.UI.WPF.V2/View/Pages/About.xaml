<Page x:Class="CastReporting.UI.WPF.View.Pages.About"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:label="clr-namespace:CastReporting.UI.WPF.Resources.Languages"
      xmlns:page="clr-namespace:CastReporting.UI.WPF.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600"
	Title="About">
    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF00d5ff"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <StackPanel Orientation="Vertical"  HorizontalAlignment="Center"  Margin="40,40,-85,-170" Width="600" >

        <TextBlock Text="{x:Static label:Messages.lblAboutTitle}" />

        <TextBlock Text="{x:Static page:About.lblAboutVersion}" />
        <TextBlock Text="{x:Static label:Messages.lblAboutCopyright}" />
        <Image Source="/CastReporting.UI.WPF;component/Resources/Images/splash.png" Height="300" Width="500"  Margin="-20,40,100,0"  />



    </StackPanel>



</Page>
