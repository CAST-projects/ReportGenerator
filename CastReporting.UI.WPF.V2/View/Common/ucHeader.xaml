<UserControl x:Class="CastReporting.UI.WPF.Common.UcHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:label="clr-namespace:CastReporting.UI.WPF.Resources.Languages"
             xmlns:common="clr-namespace:CastReporting.UI.WPF.Common"
             mc:Ignorable="d" Width="auto" Height="70">


    <Grid Background="#FF343434" Width="auto" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <DockPanel>
            <common:Menu x:Name="UcMenu" />
            <Label Content="" Foreground="#4C000000" FontSize="32" Margin="0,22,10,23" FontFamily="Open Sans Extrabold" Height="25" Width="308" HorizontalAlignment="Left">
                <Label.Background>
                    <ImageBrush ImageSource="/CastReporting.UI.WPF;component/Resources/Images/rg-title.png"
					RenderOptions.BitmapScalingMode="NearestNeighbor"
					RenderOptions.EdgeMode="Aliased"/>
                </Label.Background>
            </Label>
        </DockPanel>
    </Grid>
</UserControl>
